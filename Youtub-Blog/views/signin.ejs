<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Sign In</title>
  </head>
  <body>
    <div class="container mt-4">
      <form action="/user/signin" method="post"> <!-- Corrected action URL -->
        <!-- Email Field -->
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <!-- End of Email -->

        <!-- Password Field -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>
        <!-- End of Password -->

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Sign In</button>
      </form>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>